"""
mcb2.pyw - Saves and loads pieces of text to the clipboard.
py.exe mcb2.pyw save <keyword> : save clipboard to keyword.
py.exe mcb2.pyw <keyword> : loads keyword to clipboard.
py.exe mcb2.pyw list : loads all keywords to clipboard.
"""

import shelve, pyperclip, sys

mcbShelf = shelve.open('mcb2')

if len(sys.argv) == 3 and sys.argv[1].lower() == 'save':
    mcbShelf[sys.argv[2]] = pyperclip.paste()
    print("saved your clipboard in python pickle file mcb2")

elif len(sys.argv) == 2:
    if sys.argv[1].lower() == 'list':
        pyperclip.copy(str(list(mcbShelf.keys())))
        print(list(mcbShelf.keys()))
    elif sys.argv[1] in mcbShelf:
        pyperclip.copy(mcbShelf[sys.argv[1]])
        print(mcbShelf[sys.argv[1]])

mcbShelf.close()
